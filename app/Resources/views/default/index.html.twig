{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/navbar.html.twig' %}

    <div class="index-image">
        <div class="container">
            <div class="row justify-content-left align-items-end custom-back-row">
                <div class="index-text1">
                    Aequo Ltd
                </div>
            </div>
            <div class="row justify-content-left align-items-start">
                <div class="index-text">
                    "Reach new heights"
                </div>
            </div>
            <div class="row justify-content-center">
                    <a href="#section04" class="scroll-down"><i class="fa fa-chevron-circle-down bounce"></i></a>
            </div>
        </div>
        <div id="section04"></div>
    </div>


    <section>
        <div class="container">
            <div class="title-news ">
                <h2>Aequo Ltd,</h2>
                <h5 style="color: #333">We are what our partners expect from us, a coalition of expertise of technical assistance and human
                    resource support to the benefit of industrial companies, laboratories and quality departments.</h5>
            </div>
        </div>
    </section>

    {#level 2#}
    <section style="background-color: #f7f6f7;">
        <div class="titles" >
            <h1>Latest News</h1>
        </div>
        <div class="container">
            <div class="card-deck row justify-content-center mt-30">
                {% for b in blogs %}
                <div class="col-lg-4 col-sm-8 mt-5">
                    <div class="card">
                        <a href="{{ path('newspage_details', {'id': b.id}) }}" style="overflow: hidden"><img class="card-img-top zoom" src="{{ vich_uploader_asset(b,'imageFile') }}" alt="Card image cap"></a>
                        <div class="card-body">
                            <a href="{{ path('newspage_details', {'id': b.id}) }}" class="text-card-style">
                                <h5 class="card-title">
                                    {% if app.request.locale == 'en' %}
                                        {{ b.titleEn }}
                                    {% else %}
                                        {{ b.titleFr }}
                                    {% endif %}
                                </h5></a>
                            <p class="card-text">
                                {% if app.request.locale == 'en' %}
                                    {{ b.descriptionEn }}
                                {% else %}
                                    {{ b.descriptionFr }}
                                {% endif %}
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-tag-card-footer">
                                {% if app.request.locale == 'en' %}
                                    {{ b.tagEn }}
                                {% else %}
                                    {{ b.tagFr }}
                                {% endif %}
                            </small>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
            <div class="container">
                <div class="row">
                    <div class="col text-center" style="margin: 50px">
                        <a href="{{ path('newspage') }}" class="btn btn-see-all">All Articles </a>
                    </div>
                </div>
            </div>
    </section>


